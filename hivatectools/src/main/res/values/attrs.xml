<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="textSize" format="dimension" />
    <attr name="typeface" format="string" ></attr>
    <attr name="textColor" format="color"></attr>
    <attr name="iconSize" format="dimension"></attr>
    <attr name="lineWidth" format="dimension"></attr>
    <attr name="iconOn" format="reference"></attr>
    <attr name="iconOff" format="reference"></attr>
    <attr name="dividerColor" format="color"></attr>
    <attr name="rippleColor" format="color"></attr>
    <attr name="tintColor" format="color"></attr>

    <attr name="colNum" format="integer"></attr>
    <attr name="hideAnimation" format="reference"></attr>
    <attr name="showAnimation" format="reference"></attr>



    <declare-styleable name="ActionBarView" >

        <attr name="backgroundColor"></attr>
        <attr name="tintColor"></attr>

        <attr name="title"></attr>
        <attr name="leftButton" format="enum">
            <enum name="back" value="0"></enum>
            <enum name="menu" value="1"></enum>
            <enum name="custom" value="2"></enum>
        </attr>
        <attr name="leftDrawable" format="reference"></attr>
        <attr name="right1Drawable" format="reference"></attr>
        <attr name="right2Drawable" format="reference"></attr>

    </declare-styleable>

    <declare-styleable name="HivaRadioView">

        <attr name="iconOn"></attr>
        <attr name="iconOff"></attr>
        <attr name="iconSize"/>
        <attr name="tint"></attr>

        <attr name="typeface" ></attr>
        <attr name="textColor"></attr>
        <attr name="textSize"></attr>

        <attr name="dividerColor"></attr>
        <attr name="rippleColor"></attr>

        <attr name="colNum"></attr>
        <attr name="hideAnimation"></attr>
        <attr name="showAnimation"></attr>

    </declare-styleable>

    <declare-styleable name="HivaCheckBoxView">

        <attr name="iconOn"></attr>
        <attr name="iconOff"></attr>
        <attr name="iconSize"/>
        <attr name="tint"></attr>

        <attr name="typeface" ></attr>
        <attr name="textColor"></attr>
        <attr name="textSize"></attr>

        <attr name="dividerColor"></attr>
        <attr name="rippleColor"></attr>

        <attr name="colNum"></attr>
        <attr name="hideAnimation"></attr>
        <attr name="showAnimation"></attr>

    </declare-styleable>

    <declare-styleable name="PickerView">

        <attr name="textColor"></attr>
        <attr name="textSize"></attr>
        <attr name="typeface" ></attr>
        <attr name="itemPadding" format="dimension" ></attr>

        <attr name="position" format="enum">
            <enum name="right" value="-1"></enum>
            <enum name="left" value="1"></enum>
            <enum name="center" value="0"></enum>
        </attr>

    </declare-styleable>

    <declare-styleable name="HivaButton">

        <attr name="text"></attr>
        <attr name="textColor"></attr>
        <attr name="textSize"></attr>
        <attr name="textLines" format="integer"></attr>


        <attr name="disabledBackground" format="color"></attr>
        <attr name="disabledForeground" format="color"></attr>
        <attr name="disabledDrawable" format="reference"></attr>


        <attr name="radius" format="dimension"></attr>
        <attr name="rounded" format="boolean"></attr>

        <attr name="backgroundColor" format="color"></attr>
        <attr name="backgroundDrawable" format="reference"></attr>
        <attr name="rippleColor"></attr>

        <attr name="loadingTint" format="color"></attr>

        <attr name="backgroundSecondColor" format="color"></attr>
        <attr name="gradientAgnle" format="integer"></attr>

        <attr name="strokeWidth" format="dimension"></attr>
        <attr name="strokeDashGap" format="integer"></attr>
        <attr name="strokeColor" format="color"></attr>
        <attr name="strokePressedColor" format="color"></attr>

        <attr name="topLeftCorner" format="dimension"></attr>
        <attr name="bottomLeftCorner" format="dimension"></attr>
        <attr name="topRightCorner" format="dimension"></attr>
        <attr name="bottomRightCorner" format="dimension"></attr>


        <attr name="widthPadding" format="dimension"></attr>
        <attr name="heightPadding" format="dimension"></attr>

        <attr name="isToggle" format="boolean"></attr>
        <attr name="isOn" format="boolean"></attr>
        <attr name="toggleGroup"></attr>
        <attr name="toggleGroupCanBeEmpty" format="boolean"></attr>

        <attr name="typeface" ></attr>
        <attr name="icon" format="reference"></attr>
        <attr name="iconTint" ></attr>
        <attr name="iconWidth" format="dimension"></attr>
        <attr name="space" format="dimension"></attr>
        <attr name="iconPosition" format="enum">
            <enum name="right" value="0"></enum>
            <enum name="left" value="1"></enum>
            <enum name="top" value="2"></enum>
            <enum name="bottom" value="3"></enum>
        </attr>


        <attr name="textOff" format="string"></attr>
        <attr name="textColorOff" format="color"></attr>
        <attr name="backgroundColorOff" format="color"></attr>
        <attr name="backgroundDrawableOff" format="reference"></attr>
        <attr name="backgroundSecondColorOff" format="color"></attr>
        <attr name="gradientAgnleOff" format="integer"></attr>
        <attr name="rippleColor_Off" format="color"></attr>
        <attr name="iconTintOff" ></attr>
        <attr name="iconOff"></attr>
        <attr name="strokeWidthOff" format="dimension"></attr>
        <attr name="strokeColorOff" format="color"></attr>
        <attr name="strokePressedColorOff" format="color"></attr>
        <attr name="strokeDashGapOff" format="integer"></attr>


    </declare-styleable>


    <declare-styleable name="HivaShapeView">

        <attr name="radius"></attr>
        <attr name="rounded"></attr>

        <attr name="backgroundColor"></attr>
        <attr name="backgroundDrawable"></attr>
        <attr name="rippleColor"></attr>

        <attr name="backgroundSecondColor" ></attr>
        <attr name="gradientAgnle" ></attr>

        <attr name="strokeWidth" ></attr>
        <attr name="strokeDashGap"></attr>
        <attr name="strokeColor"></attr>
        <attr name="strokePressedColor" ></attr>

        <attr name="topLeftCorner"></attr>
        <attr name="bottomLeftCorner"></attr>
        <attr name="topRightCorner"></attr>
        <attr name="bottomRightCorner"></attr>

    </declare-styleable>


    <declare-styleable name="HivaProgressBar">

        <attr name="tintColor"></attr>
        <attr name="lineWidth"></attr>

    </declare-styleable>

</resources>